.tabbar{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  pointer-events: none; /* 外层不拦截点击，内层容器处理 */
}

.tab-capsule{
  pointer-events: auto;
  width: 680rpx;
  max-width: 92%;
  height: 92rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 10rpx 24rpx;
  box-sizing: border-box;
  background: rgba(255,255,255,0.06);
  border-radius: 46rpx;
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.25);
}

.tab-item{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(255,255,255,0.9);
  font-size: 28rpx;
}

.tab-item.active{
  color: #ffd166;
  font-weight: 600;
}

.tab-item .label{ font-size: 28rpx; }

/* 小米等机型兼容 */
@supports (-webkit-backdrop-filter: none) {
  .tab-capsule { background: rgba(255,255,255,0.06); }
}