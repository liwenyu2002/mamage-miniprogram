.detail-page {
  padding: 24rpx 20rpx 160rpx;
  color: #fff;
}
.header {
  margin-bottom: 14rpx;
}
.title {
  font-size: 32rpx;
  font-weight: bold;
}
.meta-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-top: 8rpx;
}
.date {
  font-size: 22rpx;
  color: #ddd;
}
.status {
  padding: 6rpx 10rpx;
  border-radius: 8rpx;
  color: #fff;
}
.status-active {
  background: #00c853;
}
.status-finished {
  background: #111;
}
.creator {
  font-size: 20rpx;
  color: #ccc;
}
.detail-image {
  width: 100%;
  margin-top: 12rpx;
}
.content {
  margin-top: 18rpx;
}
.section-title {
  font-size: 26rpx;
  margin-bottom: 8rpx;
}
.description {
  color: #ddd;
  line-height: 1.6;
}

/* gallery styles */
.gallery {
  padding: 18rpx 0;
}
.gallery-title {
  color: #ddd;
  font-size: 26rpx;
  margin-bottom: 12rpx;
}

.gallery-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}
.gallery-item-grid {
  width: 32%;
}
.thumb-wrap {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
  overflow: hidden;
  border-radius: 8rpx;
  background: #222;
}
.gallery-thumb-grid {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: block;
}

/* Floating supplement button in the top-right corner */
.supplement-fab {
  position: fixed;
  top: 28rpx;
  right: 24rpx;
  z-index: 1200;
  background: #e6e6e6;
  color: #111;
  border-radius: 18rpx;
  padding: 18rpx 22rpx;
  font-size: 28rpx;
  font-weight: 700;
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.12);
  border: 1rpx solid rgba(0, 0, 0, 0.06);
}
.supplement-fab:active {
  opacity: 0.95;
}
