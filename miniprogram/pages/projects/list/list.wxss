/* pages/projects/list/list.wxss */

.list-page {
  min-height: 100vh;
  background: #000;
  padding-bottom: 40rpx;
  box-sizing: border-box;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx 8rpx;
  box-sizing: border-box;
}
.search-input {
  flex: 1;
  height: 64rpx;
  padding: 0 20rpx;
  border-radius: 32rpx;
  background: #222;
  color: #fff;
  font-size: 26rpx;
}
.search-input::placeholder {
  color: #888;
}
.search-btn {
  margin-left: 12rpx;
  padding: 12rpx 22rpx;
  border-radius: 32rpx;
  background: #00c853;
  color: #fff;
  font-size: 26rpx;
}

/* 项目列表（沿用首页卡片风格） */
.mini-list {
  margin-top: 8rpx;
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.mini-item {
  position: relative;
  overflow: hidden;
  border-radius: 10rpx;
  margin: 20rpx 0;
  width: 100%;
  padding-bottom: 40%; /* 类似 16:9 比例 */
  box-sizing: border-box;
}
.mini-image {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: block;
}

/* 底部 frosted 文本块，竖直排列：上面时间，下面标题 */
.mini-meta {
  position: absolute;
  left: 10rpx;
  bottom: 10rpx;
  z-index: 5;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.frost-row {
  background: rgba(66, 66, 66, 0.477);
  color: #ffffff;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
  backdrop-filter: blur(6px);
  margin-bottom: 6rpx;

  display: inline-block;
  width: auto;
  max-width: none;
  box-sizing: border-box;
}
.mini-date{font-size:20rpx;font-weight:600}
.mini-title{font-size:30rpx;font-weight:600}

.empty-tip,
.loading-tip,
.no-more-tip {
  text-align: center;
  color: #aaa;
  font-size: 24rpx;
  margin-top: 20rpx;
}
