.page{ padding-bottom: 0; background: transparent }
.album-item{ position: relative; margin: 12rpx 20rpx 20rpx; overflow: hidden; border-radius: 12rpx }
.album-image{ width: 100%; height: 300rpx; display: block }
.meta{ position: absolute; left: 12rpx; bottom: 12rpx; background: rgba(0,0,0,0.45); padding: 12rpx 16rpx; border-radius: 8rpx }
.meta-text{ color: #fff; font-size: 24rpx }

/* 状态标签：右下角，进行中为绿色，已完结为深色 */
.status{ position: absolute; right: 12rpx; bottom: 12rpx; padding: 8rpx 12rpx; border-radius: 8rpx; color: #fff; font-size: 22rpx }
.status-active{ background: #00c853 }
.status-finished{ background: #111 }
