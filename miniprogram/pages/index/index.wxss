/* 整页容器 */
.page-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: #000;   /* 看你整体风格，可以改 */
}

/* 顶部轮播：直接给固定高度 */
.carousel {
  width: calc(100% - 24rpx);
  height: 420rpx;
  margin: 12rpx 12rpx;         /* 上下 12rpx，左右 24rpx */
  border-radius: 12rpx;
  overflow: hidden;
  box-sizing: border-box;
}


/* 轮播里的图：必须占满 swiper */
.carousel-image {
  width: 100%;
  height: 100%;
  display: block;
}

/* “更多项目”一行 */
.more-line {
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 0 20rpx;
  margin-top: 12rpx;
  margin-bottom: 20rpx;
}
.more-text {
  color: #ffffff;
  font-size: 28rpx;
  opacity: 0.95;
}

/* mini 项目列表（你原来的可以继续用，稍微整理一下） */
.mini-list {
  margin-top: 4rpx;
  display: flex;
  flex-direction: column;
  padding: 0 20rpx 140rpx;
  box-sizing: border-box;
  flex: 1;
}
.mini-item {
  position: relative;
  overflow: hidden;
  border-radius: 10rpx;
  margin: 20rpx 0;
  width: 100%;
  padding-bottom: 40%; /* 16:9 比例 */
  box-sizing: border-box;
}
.mini-image {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: block;
}
.mini-meta {
  position: absolute;
  left: 10rpx;
  bottom: 10rpx;
  z-index: 5;
  display: flex;
  flex-direction: column;
  align-items: flex-start;  /* 不拉伸，宽度由内容决定 */
}
.mini-meta-text {
  color: #fff;
  font-size: 22rpx;
}
.frost-row {
  background: rgba(66, 66, 66, 0.477);
  color: #ffffff;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
  backdrop-filter: blur(6px);
  margin-bottom: 6rpx;

  display: inline-block;  /* ✨ 关键：用内容撑宽度 */
  width: auto;            /* 内容多宽就多宽 */
  max-width: none;        /* 取消 90% 的限制 */
  box-sizing: border-box;
}
