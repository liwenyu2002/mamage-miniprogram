/* 轮播样式 */
.carousel {
	/* 不占满父宽度，保留左右间隙 */
	width: auto;
	height: 420rpx; /* 轮播高度，可根据需求调整 */
	/* 缩小轮播与下方内容的间距，顶部和左右保持间隙 */
	margin: 12rpx 12rpx 12rpx;
	overflow: hidden;
	border-radius: 12rpx;
}

.carousel-image {
	width: 100%;
	height: 100%;
	display: block;
	object-fit: cover; /* 填充并裁剪，达到视觉最大化效果 */
	/* 让图片跟随父容器的圆角，避免溢出 */
	border-radius: inherit;
}

/* 更多项目行：右对齐，和轮播左右间隙一致 */
.more-line {
	display: flex;
	justify-content: flex-end;
	padding-right: 20rpx; /* 与轮播左右间隙保持一致 */
	margin-top: 12rpx;
	margin-bottom: 12rpx;
}

.more-text {
	color: #ffffff;
	font-size: 28rpx;
	opacity: 0.95;
}

/* 首页 mini 项目列表 */
.mini-list { margin-top: 4rpx; display: flex; flex-direction: column; padding: 0 20rpx 140rpx; box-sizing: border-box; flex: 1; }
.mini-item { position: relative; overflow: hidden; border-radius: 10rpx; display: flex; flex: 1; margin: 20rpx 0; }
.mini-image { width: 100%; height: 100%; display: block; object-fit: cover }
.mini-meta { position: absolute; left: 10rpx; bottom: 10rpx; background: rgba(0,0,0,0.45); padding: 8rpx 12rpx; border-radius: 8rpx }
.mini-meta-text { color: #fff; font-size: 22rpx }
.mini-status { position: absolute; right: 10rpx; bottom: 18rpx; padding: 6rpx 10rpx; border-radius: 8rpx; color: #fff; font-size: 20rpx }
.status-active{ background: #00c853 }
.status-finished{ background: #111 }

/* 页面根容器，整页高度为视口高度，按列分布 */
.page-container { display: flex; flex-direction: column; height: 100vh; }

/* 确保更多行高度固定，便于计算剩余空间 */
.more-line { height: 48rpx; display: flex; align-items: center; }

