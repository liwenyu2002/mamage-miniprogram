.page{ height:100vh; box-sizing:border-box; padding:40rpx 24rpx 160rpx; color:#fff }
.card{ background: rgba(255,255,255,0.02); padding:28rpx; border-radius:12rpx; align-items: center }
.title{ font-size:36rpx; color:#fff; text-align:center; margin-bottom:18rpx }
.qr-wrap{ display:flex; justify-content:center; margin-bottom:18rpx }
.code-row{ display:flex; align-items:center; justify-content:center; margin-bottom:18rpx }
.code-label{ color:#ccc; font-size:26rpx; margin-right:10rpx }
.code{ color:#fff; font-size:30rpx; font-weight:600 }
.btn-row{ display:flex; gap:20rpx; justify-content:center }
.btn{ padding:18rpx 34rpx; border-radius:10rpx; font-size:28rpx }
.copy-btn{ background:#ffd166; color:#111 }
.save-btn{ background:#e6e6e6; color:#111 }
