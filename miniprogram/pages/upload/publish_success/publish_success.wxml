<view class="page">
  <view class="card">
    <text class="title">发布成功</text>

    <view class="qr-wrap">
      <canvas canvas-id="qrCanvas" style="width:360rpx;height:360rpx;background:#fff;border-radius:8rpx;"></canvas>
    </view>

    <view class="code-row">
      <text class="code-label">邀请码：</text>
      <text class="code">{{code}}</text>
    </view>

    <view class="btn-row">
      <view class="btn copy-btn" bindtap="onCopy">复制邀请码</view>
      <view class="btn save-btn" bindtap="onSave">保存二维码</view>
    </view>
  </view>
</view>
