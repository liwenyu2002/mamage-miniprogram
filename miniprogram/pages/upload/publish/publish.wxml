<view class="upload-home">
  <view class="title">创建新任务</view>
  <view class="subtitle">请填写任务信息并确认发布</view>

  <view class="card form-card">
    <view class="form-row">
      <view class="label">项目名称 <text class="required">*</text></view>
      <input class="input" placeholder="请输入项目名称" value="{{projectName}}" bindinput="onNameInput" />
    </view>

    <view class="form-row">
      <view class="label">项目描述</view>
      <textarea class="textarea" placeholder="请输入项目描述（可选）" value="{{description}}" bindinput="onDescriptionInput" auto-height="false" maxlength="1000" />
    </view>

    <view class="form-row picker-row">
      <view class="label">开展日期</view>
      <picker mode="date" value="{{eventDate}}" start="2000-01-01" end="2099-12-31" bindchange="onDateChange">
        <view class="picker">{{eventDate || '请选择日期'}}</view>
      </picker>
    </view>

    <view class="form-row">
      <view class="btn primary" bindtap="confirmPublish">确认发布</view>
    </view>
  </view>
</view>
