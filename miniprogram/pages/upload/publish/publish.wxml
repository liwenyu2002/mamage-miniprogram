<view class="page">
  <view class="container">
    <view class="field">
      <text class="label">任务名称 <text class="required">（必填）</text></text>
      <input class="input" placeholder="请输入任务名称" value="{{name}}" bindinput="onNameInput" />
    </view>

    <view class="field">
      <text class="label">截止日期</text>
      <picker mode="date" bindchange="onDateChange" value="{{endDate}}">
        <view class="picker">{{endDate || '请选择截止日期'}}</view>
      </picker>
    </view>
  </view>

  <view class="btn-group">
    <view class="big-btn publish-action" bindtap="onPublish">点击发布</view>
  </view>
</view>
