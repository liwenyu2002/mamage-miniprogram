.page{ height:100vh; box-sizing:border-box; background: transparent; color: #fff; padding: 40rpx 24rpx 160rpx }
.container{ background: rgba(255,255,255,0.03); padding: 28rpx; border-radius: 16rpx }
.field{ margin-bottom: 28rpx }
.label{ display:block; color:#ddd; font-size:26rpx; margin-bottom:10rpx }
.input{ width:100%; height:64rpx; padding:0 18rpx; background: rgba(255,255,255,0.04); color:#fff; border-radius:10rpx; border:1rpx solid rgba(255,255,255,0.03); font-size:28rpx }
.picker{ height:64rpx; line-height:64rpx; padding:0 18rpx; background: rgba(255,255,255,0.02); color:#ddd; border-radius:10rpx; border:1rpx solid rgba(255,255,255,0.02) }
.action-row{ display:flex; justify-content:center; margin-top:10rpx }
.publish-btn{ background:#e6e6e6; color:#111; padding:20rpx 60rpx; border-radius:12rpx; font-size:32rpx; font-weight:600 }
