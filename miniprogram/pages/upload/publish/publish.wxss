.upload-home {
  padding: 40rpx 32rpx;
  color: #fff;
}

.title {
  font-size: 34rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #cccccc;
  margin-bottom: 32rpx;
}

.card {
  background: #1f1f1f;
  border-radius: 20rpx;
  padding: 24rpx 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.25);
}

.card:active {
  opacity: 0.9;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.card-desc {
  font-size: 24rpx;
  color: #bbbbbb;
}

.secondary {
  background: #262626;
}

/* 表单样式 */
.form-card { padding: 24rpx; }
.form-row { margin-bottom: 18rpx; }
.label { color: #ddd; font-size: 24rpx; margin-bottom: 8rpx; }
.required { color: #ff5252; }
.input { width: 100%; height: 64rpx; padding: 10rpx; background: #121212; color: #fff; border-radius: 8rpx; border: 1rpx solid rgba(255,255,255,0.04); }
.textarea { width: 100%; min-height: 160rpx; padding: 10rpx; background: #121212; color: #fff; border-radius: 8rpx; border: 1rpx solid rgba(255,255,255,0.04); }
.picker-row { display:flex; gap: 12rpx; align-items: center; flex-wrap:wrap; }
.picker { padding: 12rpx 14rpx; background:#121212; color:#ddd; border-radius:8rpx; border:1rpx solid rgba(255,255,255,0.04); }
.btn { display:inline-block; padding: 14rpx 20rpx; border-radius: 10rpx; background:#333; color:#fff; text-align:center; }
.btn.primary { background: #00c853; color:#fff; font-weight:700; }
