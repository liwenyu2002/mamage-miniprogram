.upload-home {
  padding: 40rpx 32rpx;
  color: #fff;
}

.title {
  font-size: 34rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #cccccc;
  margin-bottom: 32rpx;
}

.card {
  background: #1f1f1f;
  border-radius: 20rpx;
  padding: 24rpx 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.25);
}

.card:active {
  opacity: 0.9;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.card-desc {
  font-size: 24rpx;
  color: #bbbbbb;
}

.secondary {
  background: #262626;
}
