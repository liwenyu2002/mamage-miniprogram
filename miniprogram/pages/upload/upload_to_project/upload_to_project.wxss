.page {
  padding: 32rpx;
  color: #ffffff;
}

.section {
  margin-bottom: 32rpx;
}

.label {
  font-size: 28rpx;
  margin-bottom: 12rpx;
}

.hint {
  font-size: 22rpx;
  color: #aaaaaa;
  margin-top: 6rpx;
  margin-bottom: 10rpx;
}

/* 搜索框 */

.search-box {
  background: #1f1f1f;
  border-radius: 16rpx;
  padding: 10rpx 16rpx;
  margin-bottom: 6rpx;
}

.search-input {
  font-size: 26rpx;
  color: #ffffff;
}

.search-input::placeholder {
  color: #888888;
}

/* 项目列表 */

.project-list {
  margin-top: 8rpx;
}

.project-item {
  padding: 14rpx 16rpx;
  border-radius: 12rpx;
  background: #1f1f1f;
  margin-bottom: 10rpx;
}

.project-item.active {
  border: 2rpx solid #00c853;
}

.project-name {
  font-size: 26rpx;
  margin-bottom: 4rpx;
}

.project-meta {
  font-size: 22rpx;
  color: #bbbbbb;
}

.load-more-tip {
  font-size: 22rpx;
  color: #999999;
  text-align: center;
  padding: 12rpx 0;
}

/* 图片网格 */

.count {
  font-size: 24rpx;
  color: #cccccc;
}

.img-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.thumb {
  width: 30%;
  padding-bottom: 30%;
  border-radius: 12rpx;
  overflow: hidden;
  background: #222;
}

.thumb image,
.thumb .add-text {
  width: 100%;
  height: 100%;
  display: block;
}

.thumb.add {
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-text {
  text-align: center;
  font-size: 26rpx;
  color: #aaaaaa;
}

/* 上传按钮 */

.upload-btn {
  margin-top: 24rpx;
  border-radius: 24rpx;
  font-size: 30rpx;
}
