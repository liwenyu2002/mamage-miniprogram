.page{ padding: 0; color: #fff; box-sizing: border-box; height: 100vh; display: flex; flex-direction: column; padding-bottom: 140rpx }
.btn-group{ display: flex; flex-direction: column; flex: 1 }
.big-btn{
	flex: 1;
	margin: 20rpx; /* maintain gap around each button */
	border-radius: 20rpx;
	font-size: 36rpx;
	font-weight: bold;
	display: flex;
	align-items: center;
	justify-content: center;
	border: none;
}
.upload-photo{ background: #e6e6e6; color: #111; border: 1rpx solid rgba(0,0,0,0.06) }
.publish-task{ background: #e6e6e6; color: #111; border: 1rpx solid rgba(0,0,0,0.06) }

.big-btn:active{ opacity: 0.95 }